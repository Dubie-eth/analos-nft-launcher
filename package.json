{
  "name": "analos-nft-launcher",
  "version": "1.0.0",
  "description": "NFT minting platform for Analos blockchain",
  "private": true,
  "workspaces": [
    "backend",
    "frontend-new"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend-new && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend-new && npm run build",
    "start": "cd backend && npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
